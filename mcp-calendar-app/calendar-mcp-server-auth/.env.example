# MCP Server Configuration (Protected Resource)
# The MCP server validates tokens FROM clients (Jupyter, VS Code, etc.)
HOST=localhost
PORT=3000
MCP_TRANSPORT=stdio
MCP_HOST=0.0.0.0
MCP_PORT=3000

# Calendar API Configuration (Internal, Trusted Service - No Auth)
CALENDAR_API_BASE_URL=http://127.0.0.1:8000

# Keycloak Authorization Server
AUTH_HOST=localhost
AUTH_PORT=8080
AUTH_REALM=master

# OAuth Server Credentials (for token introspection)
# The MCP server uses these credentials to validate tokens FROM clients
OAUTH_CLIENT_ID=mcp-server
OAUTH_CLIENT_SECRET=your-mcp-server-secret-here

# Required OAuth Scope
MCP_SCOPE=mcp:tools
